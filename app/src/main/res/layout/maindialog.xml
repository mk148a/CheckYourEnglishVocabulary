<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="usernamet"
        android:id="@+id/detail_usernametxt"
        android:textColor="@color/foreground_material_light"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".01"></LinearLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/uuserDeailtList"
        android:layout_weight=".89"
        android:choiceMode="singleChoice" />

    <Button android:id="@+id/Button01"
        android:layout_width="wrap_content" android:layout_height="0dp"
        android:layout_centerHorizontal="true" android:text="@string/back"
        android:layout_weight=".1"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
